<h1>Listing Survivors</h1>
 
<%= link_to 'New Survivor', new_survivor_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Gender</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Infected</th>
    <th>Water</th>
    <th>Food</th>
    <th>Medication</th>
    <th>Ammunition</th>
  </tr>
 
  <% @survivors.each do |survivor| %>
    <tr>
      <td><%= survivor.name %></td>
      <td><%= survivor.age %></td>
      <td><%= survivor.gender %></td>
      <td><%= survivor.latitude %></td>
      <td><%= survivor.longitude %></td>
      <td><%= survivor.infected %></td>
      <td><%= survivor.water %></td>
      <td><%= survivor.food %></td>
      <td><%= survivor.medication %></td>
      <td><%= survivor.ammunition %></td>
      <td><%= link_to 'Show', survivor_path(survivor) %></td>
      <td><%= link_to 'Edit Location', edit_survivor_path(survivor) %></td>
    </tr>
  <% end %>
</table>

